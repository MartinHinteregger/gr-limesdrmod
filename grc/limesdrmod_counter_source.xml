<?xml version="1.0"?>
<block>
  <name>Counter Source</name>
  <key>limesdrmod_counter_source</key>
  <category>[LimeSuite]</category>
  <import>import limesdrmod</import>
  <make>limesdrmod.counter_source($increment, $minimum, $maximum)</make>

  <param>
    <name>Minimum</name>
    <key>minimum</key>
    <value>0</value>
    <type>int</type>
  </param>
  
  <param>
    <name>Maximum</name>
    <key>maximum</key>
    <value>255</value>
    <type>int</type>
  </param>
  
  <param>
    <name>Increment</name>
    <key>increment</key>
    <value>1</value>
    <type>int</type>
  </param>

  <source>
    <name>out</name>
    <type>byte</type>
    <nports>1</nports>
  </source>
</block>
