<?xml version="1.0"?>
<block>
  <name>Timed Blocker</name>
  <key>limesdrmod_timed_blocker_bb</key>
  <category>[LimeSuite]</category>
  <import>import limesdrmod</import>
  <make>limesdrmod.timed_blocker_bb($block_ms, $pass_ms)</make>

  <param>
    <name>Block time in ms</name>
    <key>block_ms</key>
    <value>1000</value>
    <type>int</type>
  </param>
  
  <param>
    <name>Pass time in ms</name>
    <key>pass_ms</key>
    <value>1000</value>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>byte</type>
    <nports>1</nports>
  </sink>

  <source>
    <name>out</name>
    <type>byte</type>
    <nports>1</nports>
  </source>
</block>
